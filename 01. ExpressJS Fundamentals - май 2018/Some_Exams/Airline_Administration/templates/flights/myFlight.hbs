<div class="flight-ticket">
    <div class="flight-left">
        <img src="{{image}}" alt="{{origin}} - {{destination}} flight image">
    </div>
    <div class="flight-right">
        <div>
            <h3>{{destination}}</h3><span>{{departure}}</span>
        </div>
        <div>
            from {{origin}} <span>{{departureHour}}</span>
        </div>
        <p>{{seats}} Seats ({{cost}}$ per seat) </p>
        <a href="#/remove/flight/{{_id}}" class="remove">REMOVE</a>
        <a href="#/details/flight/{{_id}}" class="details">Details</a>
    </div>
</div>
