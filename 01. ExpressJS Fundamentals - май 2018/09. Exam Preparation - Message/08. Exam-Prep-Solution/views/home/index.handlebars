<h1>Welcome to Messenger</h1>

{{#if currentUser}}
    <form action="/threads/find" method="post">
        <input name="username" placeholder="username to chat with" />
        <input type="submit" value="Chat" />
    </form>
{{/if}}

{{#each thread}}
    <a href="{{link}}">{{thread.users}}</a>
{{else}}
    <i>No threads.</i>
{{/each}}